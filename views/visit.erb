<h2>Записаться</h2>
<form action="/visit" method="POST" role="form">

	<div class="form-group">
		<label>Ваше имя</label>
		<input name="username" value="<%= @username %>" type="text" class="form-control" placeholder="Имя">
	</div>

	<div class="form-group">
		<label>Ваш телефон </label>
		<input name="userphone" value="<%= @userphone %>" type="text" class="form-control" placeholder="Телефон">
	</div>

	<div class="form-group">
		<label>Когда вас ждать</label>
		<input id="datetimepicker" name="usertime" value="<%= @usertime %>" type="text" class="form-control" placeholder="Дата и время">
	</div>

	<div class="form-group">
		<label>Выберите парикмахера</label>
		<select name="users_barber" class="form-select" aria-label="Default select example">
			<option selected></option>
			<% @barbers.each do |item| %>
				<option <%= @barber == item['Name'] ? 'selected' : '' %> ><%= item['Name'] %></option>
			<% end %>
		</select>
	</div>

	<div class="form-group">
		<label>Выберите цвет</label>
		<select name="colorpicker">
			<option value="#7bd148">Green</option>
			<option value="#5484ed">Bold blue</option>
			<option value="#a4bdfc">Blue</option>
			<option value="#46d6db">Turquoise</option>
			<option value="#7ae7bf">Light green</option>
			<option value="#51b749">Bold green</option>
			<option value="#fbd75b">Yellow</option>
			<option value="#ffb878">Orange</option>
			<option value="#ff887c">Red</option>
			<option value="#dc2127">Bold red</option>
			<option value="#dbadff">Purple</option>
			<option value="#e1e1e1">Gray</option>
		</select>
	</div>

	<button type="submit" class="btn btn-primary">Записаться</button>

</form>

<script type="text/javascript">
	$(function(){
		$('select[name="colorpicker"]').simplecolorpicker()
		$('#datetimepicker').datetimepicker();
	});
</script>
