<h2>Записи</h2>

<table class="table">
  <thead class="table-light">
    <tr>
	  	 <th>Имя</th>
		 <th>Телефон</th>
		 <th>Дата и время записи</th>
		 <th>Парикмахер</th>
		 <th>Цвет</th>
	 </tr>
  </thead>
  <tbody>
  <% @results.each do |row| %>
	<tr>
	 	 <td><%= row['Name'] %></td>
		 <td><%= row['Phone'] %></td>
		 <td><%= row['DateStamp'] %></td>
		 <td><%= row['Barber'] %></td>
		 <td style="background: <%= row['Color'] %>"><%= row['Color'] %></td>
	 </tr>
  <% end %>
  </tbody>
</table>